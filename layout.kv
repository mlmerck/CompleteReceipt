<Button>:
    font_size: 30
    color: 0,1,0,1
<Label>:
    font_size: 30
    color: 58/255,97/255,255/255,1
    size_hint: .3,.2


<MainScreen>:
    name: 'main'
    GridLayout:
        rows: 3
        canvas:
            Color:
                rgba:  230/255,233/255,239/255,1
            Rectangle:
                size: self.size
        Label:
            text: "ReceiptBag"
            pos_hint: {"x": .35, "top": 1}
        GridLayout:
            cols: 3
            Label:
                text: ''
                size_hint: 1/6, .7
            Button:
                background_normal: 'piechart7.png'
                background_down: 'piechart7.png'
                size_hint: 2/3, .7
            Label:
                text: ''
                size_hint: 1/6, .7
        Label:
            text: ''



<ReceiptScreen>:
    name: 'receipts'
    BoxLayout:
        Label:
            text: 'Welcome!'
            color: 80/255, 66/255, 244/255, 1
    BoxLayout:
        Button:
            text: 'To Home Screen'
            color: 80/255, 66/255, 244/255, 1
            on_release: app.root.current = 'main'

