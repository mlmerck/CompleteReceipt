<Button>:
    font_size: 30
    color: 0,1,0,1
<Label>:
    font_size: 30
    color: 58/255,97/255,255/255,1
    size_hint: .3,.2


<MainScreen>:
    name: 'main'
    GridLayout:
        rows: 5
        canvas:
            Color:
                rgba:  230/255,233/255,239/255,1
            Rectangle:
                size: self.size
        Button:
            background_normal: 'CompleteReciptLogo2.png'
            background_down: 'CompleteReciptLogo2.png'
            size: 15, 53.1
            pos: root.x - 7.5, root.y - 26.55
        Label:
            text: ''
        Label:
            text: "Expenditure Breakdown"
            font_size: 15
            color: 58/255, 97/255, 220/255,1
        GridLayout:
            cols: 3
            Label:
                text: ''
                size_hint: 1/6, .7
           # GridLayout:
            #    cols: 3
            Button:
                background_normal: 'piechart4.png'
                background_down: 'piechart4.png'
                size_hint: 2/3, .7
            Label:
                text: ''
                size_hint: 1/6, .7
        Button:
            text: 'To Receipt History'
            font_size: 20
            background: ''
            on_release: app.root.current = 'receipts'

